{
  "name": "functions",
  "version": "1.0.5",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "reset-packages": "rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm install",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "pnpm build && firebase emulators:start --only functions",
    "shell": "pnpm build && firebase functions:shell",
    "start": "pnpm shell",
    "deploy-functions": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^5.0.1",
    "@google-cloud/secret-manager": "^6.1.1",
    "firebase-admin": "^13.6.1",
    "firebase-functions": "^7.0.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.4.1",
    "typescript": "^5.9.3"
  },
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "protobufjs",
      "unrs-resolver"
    ],
    "overrides": {}
  }
}