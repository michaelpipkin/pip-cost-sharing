{
  "name": "pipsplit",
  "version": "1.13.17",
  "type": "module",
  "scripts": {
    "reset-packages": "rm -rf node_modules && rm -rf pnpm-lock.yaml && pnpm install",
    "ng": "ng",
    "start": "ng serve --host=local.dev.com",
    "start:ci": "ng serve --host=local.dev.com --configuration=ci",
    "kill-ports": "pnpx kill-port 4000 && pnpx kill-port 4500 && pnpx kill-port 5000 && pnpx kill-port 8080 && pnpx kill-port 9099 && pnpx kill-port 9150 && pnpx kill-port 9199",
    "emu:export": "firebase emulators:export seed-data --force",
    "emu:no-data": "firebase emulators:start",
    "emu:data": "firebase emulators:start --import seed-data",
    "get-indexes": "firebase firestore:indexes",
    "build:cap": "ng build --configuration=production && npx cap sync",
    "build:prod": "pnpm --no-git-tag-version version patch && node ./setBuildDate.js && node ./updatePrivacyDate.js && ng build --configuration=production && node ./generate-sitemap.js",
    "build:ci": "node ./setBuildDate.js && node ./updatePrivacyDate.js && ng build --configuration=production && node ./generate-sitemap.js",
    "update-angular": "ng update @angular/cli @angular/core @angular/material @angular/cdk",
    "e2e:report": "playwright show-report",
    "e2e:install": "playwright install",
    "e2e:ci": "cross-env CI=true playwright test",
    "e2e:ci:headed": "cross-env CI=true playwright test --headed",
    "e2e:ci:fast": "cross-env CI=true playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium",
    "e2e:local": "playwright test",
    "e2e:local:debug": "playwright test --debug",
    "e2e:local:ui": "playwright test --ui",
    "e2e:local:headed": "playwright test --headed",
    "e2e:local:fast": "playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium",
    "e2e:local:fast:headed": "playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium --headed",
    "e2e:with-firebase": "echo 'Make sure Firebase emulators are running (pnpm emu:data)' && playwright test",
    "test:full": "concurrently --kill-others --success first \"pnpm emu:data\" \"wait-on http://localhost:8080 && playwright test\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.8",
    "@angular/cdk": "^21.0.6",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/material": "^21.0.6",
    "@angular/platform-browser": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@capacitor-community/admob": "^8.0.0",
    "@capacitor-firebase/analytics": "^8.0.1",
    "@capacitor-firebase/authentication": "^8.0.1",
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/camera": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/text-zoom": "^8.0.0",
    "@capawesome/capacitor-android-edge-to-edge-support": "^8.0.2",
    "@ngrx/signals": "^21.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap": "^5.3.8",
    "firebase": "^12.7.0",
    "moment": "^2.30.1",
    "replace-in-file": "^8.4.0",
    "shepherd.js": "^14.5.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.5",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@capacitor/assets": "^3.0.5",
    "@hcaptcha/types": "^1.1.0",
    "@playwright/test": "^1.57.0",
    "@types/jasmine": "~5.1.13",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.0.0",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-eslint-cli": "^8.0.1",
    "sharp": "^0.34.5",
    "tar": "^6.2.1",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.55.1",
    "@rollup/rollup-win32-x64-msvc": "^4.55.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "core-js",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "protobufjs"
    ],
    "overrides": {
      "@messageformat/runtime": ">=3.0.2",
      "@modelcontextprotocol/sdk": ">=1.25.2",
      "body-parser": ">=2.2.1",
      "brace-expansion": ">=1.1.12",
      "eslint": ">=9.26.0",
      "form-data": ">=2.5.4",
      "diff": ">=8.0.3",
      "glob": ">=11.1.0",
      "hono": ">=4.11.7",
      "jws": ">=4.0.1",
      "lodash": ">=4.17.23",
      "qs": ">=6.14.1",
      "sharp": ">=0.34.5",
      "undici": ">=7.18.2",
      "vite": ">=7.1.11"
    }
  }
}
