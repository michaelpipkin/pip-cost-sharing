{
  "name": "pipsplit",
  "version": "1.10.18",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=local.dev.com",
    "start:ci": "ng serve",
    "kill-ports": "pnpx kill-port 4000 && pnpx kill-port 4500 && pnpx kill-port 5000 && pnpx kill-port 8080 && pnpx kill-port 9099 && pnpx kill-port 9150 && pnpx kill-port 9199",
    "emu:export": "rm seed-data -r -f && firebase emulators:export seed-data",
    "emu:no-data": "firebase emulators:start",
    "emu:data": "firebase emulators:start --import seed-data",
    "get-indexes": "firebase firestore:indexes",
    "build:prod": "pnpm --no-git-tag-version version patch && node ./setBuildDate.js && ng build --configuration=production",
    "build:ci": "node ./setBuildDate.js && ng build --configuration=production",
    "update-angular": "ng update @angular/cli @angular/core @angular/material @angular/cdk",
    "e2e:report": "playwright show-report",
    "e2e:install": "playwright install",
    "e2e:ci": "cross-env CI=true playwright test",
    "e2e:ci:headed": "cross-env CI=true playwright test --headed",
    "e2e:ci:fast": "cross-env CI=true playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium",
    "e2e:local": "playwright test",
    "e2e:local:debug": "playwright test --debug",
    "e2e:local:ui": "playwright test --ui",
    "e2e:local:headed": "playwright test --headed",
    "e2e:local:fast": "playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium",
    "e2e:local:fast:headed": "playwright test navigation.spec.ts auth-unauthenticated.spec.ts auth-authenticated.spec.ts --project=chromium --headed",
    "e2e:with-firebase": "echo 'Make sure Firebase emulators are running (pnpm emu:data)' && playwright test",
    "test:full": "concurrently --kill-others --success first \"pnpm emu:data\" \"wait-on http://localhost:8080 && playwright test\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.3",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@ngrx/signals": "^20.0.1",
    "bootstrap": "^5.3.8",
    "firebase": "^12.2.1",
    "moment": "^2.30.1",
    "replace-in-file": "^8.3.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@hcaptcha/types": "^1.0.4",
    "@playwright/test": "^1.55.0",
    "@types/jasmine": "~5.1.9",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "jasmine-core": "~5.10.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-eslint-cli": "^8.0.1",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.2",
    "@rollup/rollup-win32-x64-msvc": "^4.50.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "core-js",
      "esbuild",
      "lmdb",
      "msgpackr-extract",
      "protobufjs"
    ],
    "overrides": {
      "form-data": ">=2.5.4",
      "brace-expansion": ">=1.1.12"
    }
  }
}
